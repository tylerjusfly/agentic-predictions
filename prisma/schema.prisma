generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Premierleague {
  id                    Int       @id @default(autoincrement())
  game_id               String    @unique
  home_team             String
  away_team             String
  predicted_score       String
  predicted_winner      String?
  month                 String
  time                  String
  date                  String
  bts                   String?
  home_win_probability  String?
  away_win_probability  String?
  both_team_to_score    String?
  over_two_goals        String?
  over_three_goals      String?
  confidence_level      String?
  actual_score          String?
  created_at            DateTime? @default(now())
}

model Transactions {
  id            String    @id @default(cuid())
  email         String
  amount        String
  status        String
  reference     String
  payment_month String?
  created_at    DateTime? @default(now())
}

// Define an enum for the user roles
enum Role {
  ADMIN
  USER
}

model Users {
  id           String   @id @default(cuid())
  email        String   @unique
  passkey      String
  salt         String
  reference    String
  verified     Boolean  @default(false)
  subsribed_at String
  created_at   DateTime @default(now())
  roles        Role[]   @default([USER])
}

model PredictionStat {
  id                    Int      @id @default(autoincrement())
  month                 String
  league                String
  totalPredictions      Int

  correctScorePassed    Int
  correctScoreFailed    Int

  over15Passed          Int
  over15Failed          Int

  over25Passed          Int
  over25Failed          Int

  btsPassed             Int
  btsFailed             Int

  straightWinPassed     Int
  straightWinFailed     Int

  drawPassed            Int
  drawFailed            Int

  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
}
